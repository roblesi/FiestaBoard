{
  "vestaboard": {
    "api_mode": "local",
    "local_api_key": "your-local-api-key",
    "cloud_key": "",
    "host": "192.168.1.100",
    "transition_strategy": null,
    "transition_interval_ms": null,
    "transition_step_size": null
  },
  "features": {
    "weather": {
      "enabled": true,
      "api_key": "your-weatherapi-key",
      "provider": "weatherapi",
      "location": "San Francisco, CA"
    },
    "datetime": {
      "enabled": true,
      "timezone": "America/Los_Angeles"
    },
    "home_assistant": {
      "enabled": false,
      "base_url": "http://homeassistant.local:8123",
      "access_token": "your-long-lived-access-token",
      "entities": [],
      "timeout": 5,
      "refresh_seconds": 30
    },
    "apple_music": {
      "enabled": false,
      "service_url": "http://localhost:5123",
      "timeout": 5,
      "refresh_seconds": 10
    },
    "guest_wifi": {
      "enabled": false,
      "ssid": "MyGuestNetwork",
      "password": "guest-password",
      "refresh_seconds": 60
    },
    "star_trek_quotes": {
      "enabled": false,
      "ratio": "3:5:9"
    },
    "rotation": {
      "enabled": true,
      "default_duration": 300
    }
  },
  "general": {
    "refresh_interval_seconds": 300,
    "output_target": "board"
  }
}

