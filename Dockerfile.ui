# Build stage
FROM node:20-alpine AS builder

# Version argument (injected at build time)
ARG VERSION=dev

WORKDIR /app

# Copy package files
COPY web/package*.json ./

# Install ALL dependencies (needed for build)
RUN npm ci

# Copy source files
COPY web/ ./

# Build the Next.js app with standalone output
# No NEXT_PUBLIC_API_URL needed - API URL is fetched at runtime
RUN npm run build

# Production stage - Run Next.js server
FROM node:20-alpine AS runner

# Version argument (passed from builder stage)
ARG VERSION=dev
ENV VERSION=${VERSION}

WORKDIR /app

ENV NODE_ENV=production
ENV PORT=3000
ENV HOSTNAME="0.0.0.0"

# Create non-root user for security
RUN addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 nextjs

# Copy standalone build output from builder stage
# The standalone output includes only production dependencies and necessary files
COPY --from=builder --chown=nextjs:nodejs /app/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /app/.next/static ./.next/static
COPY --from=builder --chown=nextjs:nodejs /app/public ./public

# Switch to non-root user
USER nextjs

EXPOSE 3000

# Run Next.js server from standalone output
CMD ["node", "server.js"]

HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD wget --quiet --tries=1 --spider http://localhost:3000/ || exit 1
