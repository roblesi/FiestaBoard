{
  "id": "star_trek_quotes",
  "name": "Star Trek Quotes",
  "version": "1.0.0",
  "description": "Display random Star Trek quotes from TNG, Voyager, and DS9",
  "author": "FiestaBoard Team",
  "repository": "https://github.com/FiestaBoard/FiestaBoard",
  "documentation": "README.md",
  "icon": "star",
  "category": "entertainment",

  "settings_schema": {
    "type": "object",
    "properties": {
      "enabled": {
        "type": "boolean",
        "title": "Enable Star Trek Quotes",
        "default": false
      },
      "ratio": {
        "type": "string",
        "title": "Series Ratio",
        "description": "Weight ratio for TNG:Voyager:DS9 (e.g., 3:5:9)",
        "default": "3:5:9",
        "pattern": "^\\d+:\\d+:\\d+$"
      }
    }
  },

  "env_vars": [
    {
      "name": "STAR_TREK_QUOTES_ENABLED",
      "required": false,
      "description": "Enable Star Trek quotes feature",
      "default": "false"
    },
    {
      "name": "STAR_TREK_QUOTES_RATIO",
      "required": false,
      "description": "Weight ratio for TNG:Voyager:DS9",
      "default": "3:5:9"
    }
  ],

  "variables": {
    "simple": [
      "quote",
      "character",
      "series",
      "series_color"
    ]
  },

  "max_lengths": {
    "quote": 120,
    "character": 15,
    "series": 7,
    "series_color": 4
  },

  "color_rules_schema": {
    "series": {
      "type": "match",
      "description": "Color based on Star Trek series",
      "default_rules": [
        {"condition": "==", "value": "tng", "color": "blue"},
        {"condition": "==", "value": "voyager", "color": "orange"},
        {"condition": "==", "value": "ds9", "color": "violet"}
      ]
    }
  }
}

