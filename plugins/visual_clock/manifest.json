{
  "id": "visual_clock",
  "name": "Visual Clock",
  "version": "1.0.0",
  "description": "Displays a full-screen clock with large pixel-art style digits.",
  "author": "FiestaBoard",
  "icon": "clock",
  "category": "art",
  "repository": "https://github.com/roblesi/FiestaBoard",
  "documentation": "README.md",
  "settings_schema": {
    "type": "object",
    "properties": {
      "timezone": {
        "type": "string",
        "title": "Timezone",
        "description": "IANA timezone for the clock (e.g., America/New_York, Europe/London).",
        "default": "America/Los_Angeles"
      },
      "time_format": {
        "type": "string",
        "title": "Time Format",
        "description": "Display time in 12-hour or 24-hour format.",
        "enum": ["12h", "24h"],
        "default": "12h"
      },
      "color_pattern": {
        "type": "string",
        "title": "Color Pattern",
        "description": "Color pattern for the clock display.",
        "enum": ["solid", "pride", "rainbow", "sunset", "ocean", "retro", "christmas", "halloween"],
        "default": "solid"
      },
      "digit_color": {
        "type": "string",
        "title": "Digit Color",
        "description": "Color for solid pattern (ignored when using other patterns).",
        "enum": ["red", "orange", "yellow", "green", "blue", "violet", "white"],
        "default": "white"
      },
      "background_color": {
        "type": "string",
        "title": "Background Color",
        "description": "Background color for the clock display.",
        "enum": ["red", "orange", "yellow", "green", "blue", "violet", "white", "black"],
        "default": "black"
      }
    }
  },
  "variables": {
    "simple": ["visual_clock", "time", "time_format", "hour", "minute"]
  },
  "max_lengths": {
    "visual_clock": 132,
    "time": 8,
    "time_format": 3,
    "hour": 2,
    "minute": 2
  }
}
