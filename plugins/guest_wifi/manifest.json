{
  "id": "guest_wifi",
  "name": "Guest WiFi",
  "version": "1.0.0",
  "description": "Display guest WiFi credentials on your board",
  "author": "FiestaBoard Team",
  "repository": "https://github.com/FiestaBoard/FiestaBoard",
  "documentation": "README.md",
  "icon": "wifi",
  "category": "utility",

  "settings_schema": {
    "type": "object",
    "properties": {
      "enabled": {
        "type": "boolean",
        "title": "Enable Guest WiFi",
        "default": false
      },
      "ssid": {
        "type": "string",
        "title": "Network Name (SSID)",
        "description": "Your guest WiFi network name",
        "maxLength": 22
      },
      "password": {
        "type": "string",
        "title": "Password",
        "description": "Your guest WiFi password",
        "maxLength": 22,
        "ui:widget": "password"
      }
    },
    "required": ["ssid", "password"]
  },

  "env_vars": [
    {
      "name": "GUEST_WIFI_SSID",
      "required": true,
      "description": "Guest WiFi network name"
    },
    {
      "name": "GUEST_WIFI_PASSWORD",
      "required": true,
      "description": "Guest WiFi password"
    }
  ],

  "variables": {
    "simple": [
      "ssid",
      "password"
    ]
  },

  "max_lengths": {
    "ssid": 22,
    "password": 22
  }
}

