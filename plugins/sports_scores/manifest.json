{
  "id": "sports_scores",
  "name": "Sports Scores",
  "version": "1.0.0",
  "description": "Display recent sports match scores from NFL, Soccer, NHL, and NBA",
  "author": "FiestaBoard Team",
  "repository": "https://github.com/FiestaBoard/FiestaBoard",
  "documentation": "README.md",
  "icon": "trophy",
  "category": "data",

  "settings_schema": {
    "type": "object",
    "properties": {
      "enabled": {
        "type": "boolean",
        "title": "Enable Sports Scores",
        "default": false
      },
      "sports": {
        "type": "array",
        "title": "Sports",
        "description": "Select sports to display scores for",
        "minItems": 1,
        "items": {
          "type": "string",
          "enum": ["NFL", "Soccer", "NHL", "NBA"]
        },
        "uniqueItems": true
      },
      "api_key": {
        "type": "string",
        "title": "TheSportsDB API Key (Optional)",
        "description": "Optional API key for premium features. Free tier uses key '123' by default.",
        "ui:widget": "password"
      },
      "max_games_per_sport": {
        "type": "integer",
        "title": "Max Games Per Sport",
        "description": "Maximum number of games to fetch per sport (1-10)",
        "default": 3,
        "minimum": 1,
        "maximum": 10
      },
      "refresh_seconds": {
        "type": "integer",
        "title": "Refresh Interval (seconds)",
        "default": 300,
        "minimum": 60
      }
    },
    "required": ["sports"]
  },

  "env_vars": [
    {
      "name": "SPORTS_SCORES_ENABLED",
      "required": false,
      "description": "Enable sports scores feature",
      "default": "false"
    },
    {
      "name": "SPORTS_SCORES_API_KEY",
      "required": false,
      "description": "Optional TheSportsDB API key for premium features"
    },
    {
      "name": "SPORTS_SCORES_SPORTS",
      "required": false,
      "description": "Comma-separated list of sports (NFL,Soccer,NHL,NBA)"
    },
    {
      "name": "SPORTS_SCORES_MAX_GAMES",
      "required": false,
      "description": "Maximum games per sport (default: 3)",
      "default": "3"
    }
  ],

  "variables": {
    "simple": [
      "sport",
      "team1",
      "team2",
      "score1",
      "score2",
      "status",
      "date",
      "time",
      "formatted",
      "sport_count",
      "game_count",
      "last_updated"
    ],
    "arrays": {
      "games": {
        "label_field": "formatted",
        "item_fields": [
          "sport",
          "team1",
          "team2",
          "team1_full",
          "team2_full",
          "team1_color",
          "team2_color",
          "score1",
          "score2",
          "status",
          "date",
          "time",
          "formatted"
        ]
      }
    }
  },

  "max_lengths": {
    "sport": 10,
    "team1": 10,
    "team2": 10,
    "team1_full": 30,
    "team2_full": 30,
    "score1": 3,
    "score2": 3,
    "status": 15,
    "date": 10,
    "time": 8,
    "formatted": 22,
    "sport_count": 1,
    "game_count": 2,
    "last_updated": 25,
    "games.*.sport": 10,
    "games.*.team1": 10,
    "games.*.team2": 10,
    "games.*.team1_color": 5,
    "games.*.team2_color": 5,
    "games.*.score1": 3,
    "games.*.score2": 3,
    "games.*.status": 15,
    "games.*.formatted": 20
  }
}
